
<%= form_for @user do |form| %>
<div class = 'container'>

<div class="form-group">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email', class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :fullname %>
  <%= form.text_field :fullname, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :username %>
  <%= form.text_field :username, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :website %>
    <%= form.text_field :website, class: "form-control" %>
<div>

<div class="form-group">
  <%= form.label :bio %>
  <%= form.text_field :bio, class: "form-control" %>
</div>

<div class="form-group">
  <%= form.label :phone_number %>
  <%= form.number_field :phone_num, class: "form-control" %>
</div>

<div class="form-group">
   <%= select_tag 'user[gender]', options_for_select([["Not Specified", :not_specified], ["Male", :male],["Female", :female]]) %>
<div>



<div class="form-group">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control" %>
</div>  

<div class="submit-field">
  <%= form.submit "Submit", class: "btn btn-default"%>
</div>
<%end%>